= simple_form_for(@place, html: { multipart: true, class: 'form-horizontal'}) do |f|
  = f.error_notification

  %fieldset
    .span8
      %legend List Your Place

      = f.input :name, input_html: { class: 'span5' }
      
      = f.input :address_line1, input_html: { class: 'span5' }
      = f.input :city, input_html: { class: 'span3' }
      = f.input :country, input_html: { class: 'span3 chzn-select' }
      = f.input :desc, as: :text, input_html: { rows: 4, class: 'span5' }
      = f.input :transport, as: :text, input_html: { rows: 4, class: 'span5' }

    .span6
      %legend Contact details
      = f.input :kind, label: "Structure kind", required: true, collection: Place.get_kind_values, input_html: { class: 'chzn-select span2' }
      = f.input :contact_name,  input_html: { class: 'span3' }
      = f.input :contact_mail, required: true, input_html: { class: 'span3' }
      = f.input :website, input_html: { class: 'span3' }
      = f.input :contact_facebook, input_html: { class: 'span3' }
      = f.input :contact_twitter, input_html: { class: 'span3' }
      = f.input :contact_twitter, input_html: { class: 'span3' }

    .span6
      %legend Other details
      = f.input :coworking_visa, required: true, collection: Place.get_coworking_visa_values, input_html: { class: 'chzn-select span2' }

      = f.input :drop_in, required: true, collection: Place.get_drop_in_values, input_html: { class: 'chzn-select span2' }

      = f.input :progress, required: true, collection: Place.get_progress_values, input_html: { class: 'chzn-select span2' }


      = f.input :wifi, input_html: { class: 'span5' }

      = f.input :features, label: 'Smoke' do
        = check_box_tag 'place[features][]', 'smoke' 

  .form-actions
    = f.button :submit, class: 'btn-info btn-large'
